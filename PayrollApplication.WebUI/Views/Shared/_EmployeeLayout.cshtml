<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <link href="//cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

</head>
<body>


    <nav class="navbar navbar-expand-sm  navbar-dark fixed-top" style="background-color: rgb(27, 111, 206);">
        <div class="container">
            <a id="WebsiteName" class="navbar-brand" href="/Home/Index">Pay Roll</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Employee/Detail">Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Employee/Attendance">Attendance</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Employee/Salary">Salary</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Employee/Payment">Payment</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Employee/AddFeedback">Add FeedBack</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Account/LogOut">LogOut</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>
