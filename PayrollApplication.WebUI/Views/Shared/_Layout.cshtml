<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link href="~/Content/style.css" rel="stylesheet" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-sm  navbar-dark fixed-top" style="background-color: rgb(27, 111, 206);">
        <div class="container">
            <a id="WebsiteName" class="navbar-brand" href="/Home/Index">Pay Roll</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="collapsibleNavbar">
                <ul class="navbar-nav ">
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Home/About">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Home/Service">Service</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Home/Contact">Contact Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link navLinks" href="/Account/Login">Login</a>
                    </li>
                 
                </ul>
            </div>
        </div>
    </nav>



 
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>


</body>
</html>
