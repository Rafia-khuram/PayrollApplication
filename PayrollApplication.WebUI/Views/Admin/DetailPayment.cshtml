@using PayrollApplication.BOL
@model List<Payment>
@{
    ViewBag.Title = "DetailPayments";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">
    <div class="container mt-5 justify-content-center">
        <button class="btn btn-primary" style="background-color:rgb(27, 111, 206) ;"><a style="color: white; text-decoration:none; " href="/Admin/AddPayment">Add Payment</a></button>
    </div>
    <br />
    <table id="myTable" class="mt-2 table table-light table-bordered table-striped table-hover">
        <thead>
            <tr>


                <th>Employee Name</th>
                <th>Issued Date</th>
                <th>For Month</th>
                <th>Payment Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Salary.Employee.Name</td>
                    <td>@item.IssuedDate</td>
                    <td>@item.Salary.Month,@item.Salary.Year</td>
                    <td>@item.PaymentStatus.Name</td>

                    <td>

                        <a href="/Admin/EditPayment/@item.Id"> <span class="bi bi-pencil-square text-info"></span></a>
                        <a href="/Admin/DeletePayment/@item.Id"> <span class="bi bi-person-x-fill text-danger"></span></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section scripts{

        <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            });

        </script>
    }
</div>
