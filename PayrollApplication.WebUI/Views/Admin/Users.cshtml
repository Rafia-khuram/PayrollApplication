@using PayrollApplication.BOL
@model List<User>
@{
    ViewBag.Title = "Users";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="container">
    <div class="container mt-5 justify-content-center">
        <button class="btn btn-primary" style="background-color:rgb(27, 111, 206) ;"><a style="color: white; text-decoration:none; " href="/Admin/AddUser">Add User</a></button>
    </div>
    <br />
    <table id="myTable" class="mt-2 table table-light  table-striped table-hover">
        <thead>
            <tr>

                <th>Name</th>
                <th>Email</th>
                <th>Password</th>
                <th>Phone Number</th>
                <th>Role</th>
                <th>Gender</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>


                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Password</td>
                    <td>@item.PhoneNumber </td>
                    <td>@item.Role.Name</td>
                    <td>@item.Gender.Name</td>
                    <td>@item.Image</td>
                    <td>
                        <a href="/Admin/DetailUser/@item.Id"> <span class="bi bi-search text-primary"></span></a>
                        <a href="/Admin/EditUser/@item.Id"> <span class="bi bi-pencil-square text-info"></span></a>
                        <a href="/Admin/DeleteUser/@item.Id"> <span class="bi bi-person-x-fill text-danger"></span></a>


                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section scripts{

        <script src="//cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
        <script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            });

        </script>
    }
</div>